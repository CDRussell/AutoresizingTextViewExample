<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.cdrussell.casterio.autoresizingtextviewexample.MainActivity">

    <TextView
        android:id="@+id/smallLength"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#4C9"

        android:text="@string/shortString"/>

    <TextView
        android:id="@+id/mediumLength"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#4C9"
        app:autoSizeTextType="uniform"
        android:text="@string/medium_string"/>

    <TextView
        android:id="@+id/longLength"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#4C9"
        app:autoSizeTextType="uniform"
        android:text="@string/long_string"/>

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:max="160"/>

</LinearLayout>
